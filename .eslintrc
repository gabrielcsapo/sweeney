{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-cond-assign": 0
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    }
}
